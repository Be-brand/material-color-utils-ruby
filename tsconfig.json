{
  "compilerOptions": {
    "target": "ES2015",
    "module": "system",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "outFile": "_ruby/static/dist.js",
    "composite": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/*_test.ts",
    "utils/test_utils.ts"
  ]
}